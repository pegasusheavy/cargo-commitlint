#!/bin/sh
# Pre-commit hook for cargo-commitlint
# Runs cargo fmt --check and cargo clippy before allowing commits

set -e

echo "ğŸ” Running pre-commit checks..."

# Check code formatting
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt -- --check; then
    echo "âŒ Code is not properly formatted. Please run 'cargo fmt' to fix."
    exit 1
fi

# Run clippy
echo "ğŸ”§ Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues. Please fix them before committing."
    exit 1
fi

echo "âœ… Pre-commit checks passed!"
exit 0

